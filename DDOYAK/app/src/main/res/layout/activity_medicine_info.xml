<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MedicineInfo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/medicineInfo"
            android:layout_width="75dp"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="50dp"
            android:layout_marginTop="50dp"
            android:background="#ffcc00"
            android:gravity="center"
            android:text="약 정보"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/info"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/oneday2"
            android:layout_alignTop="@+id/medicineInfo" />

        <TextView
            android:id="@+id/medicineInfo2"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/medicineInfo"
            android:layout_marginTop="150dp"
            android:background="#ffcc00"
            android:gravity="center"
            android:text="복용 주기 설정"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/background"
            android:layout_width="308dp"
            android:layout_height="319dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="73dp"
            android:background="#b5ffd5e3"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/oneday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/info"
            android:text="0"
            android:textColor="@color/colorAccent"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/oneday1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/medicineInfo"
            android:layout_centerVertical="true"
            android:text="1일"
            android:textColor="@android:color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/oneday2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/medicineInfo2"
            android:layout_centerVertical="true"
            android:text="회"
            android:textColor="@android:color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/day1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="167dp"
            android:layout_toEndOf="@+id/medicineInfo"
            android:text="일치"
            android:textColor="@android:color/black"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/day1"
            android:layout_marginStart="101dp"
            android:text="0"
            android:textColor="@color/colorAccent"
            android:textSize="30dp" />

        <Button
            android:id="@+id/plus"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="73dp"
            android:gravity="center"
            android:text="+"
            android:textAlignment="center"
            android:textSize="25dp" />

        <Button
            android:id="@+id/minus"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="141dp"
            android:gravity="center"
            android:text="-"
            android:textAlignment="center"
            android:textSize="25dp" />

        <Button
            android:id="@+id/plus2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/plus"
            android:layout_alignTop="@+id/day1"
            android:gravity="center"
            android:text="+"
            android:textAlignment="center"
            android:textSize="25dp" />

        <Button
            android:id="@+id/minus2"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/minus"
            android:layout_alignTop="@+id/day1"
            android:gravity="center"
            android:text="-"
            android:textAlignment="center"
            android:textSize="25dp" />

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/background"
            android:layout_centerHorizontal="true"
            android:background="#ffcc00"
            android:text="저장"
            android:textColor="@android:color/black"
            android:textSize="20dp" />

    </RelativeLayout>

</LinearLayout>